<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchBar" parent="Widget.AppCompat.EditText">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="DepartmentCardView" parent="CardView">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="ListTitle">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>